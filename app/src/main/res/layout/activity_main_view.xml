<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.spurinnovations.spurinnovations.MainView">

    <TextView
        android:id="@+id/Alert"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Alerts"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/SpeedLimit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/speedsign"
        android:text="50"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textSize="40sp"
        android:layout_below="@id/Alert"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Timer"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Timer"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@id/SpeedLimit"
        android:gravity="center"/>

    <TextView
        android:id="@+id/curSpeed"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_below="@id/Alert"
        android:layout_alignParentRight="true"
        android:text="Current Speed"
        android:textColor="#000000"
        android:textSize="40sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Braking"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@id/Timer"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/speedometer"
        android:text="50"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Acceleration"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@id/Timer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/speedometer"
        android:text="50"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Cornering"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@id/Timer"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/speedometer"
        android:text="50"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Corneringtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Cornering"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="Cornering"
        android:layout_marginTop="0dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Accelerationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Acceleration"
        android:layout_centerHorizontal="true"
        android:text="Acceleration"
        android:layout_marginTop="0dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Brakingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Braking"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Braking"
        android:layout_marginTop="0dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:gravity="center"/>


